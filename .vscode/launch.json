	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Server",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/server",
			"envFile": "${workspaceFolder}/cmd/server/.env"
		},
		{
			"name": "Launch Client",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/client",
			"console": "internalConsole",
			"buildFlags": [
				"-tags hints"
			],
			"cwd": "${workspaceFolder}",
			"env": {
				"CGO_ENABLED": "1"
			}
		}
	]
}
